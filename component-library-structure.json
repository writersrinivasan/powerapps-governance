    "organization": "Your Organization",
    "description": "Reusable Power Apps Component Library",
    "categories": {
      "UIComponents": {
        "Forms": [
          {
            "name": "FormInput",
            "description": "Reusable text input component with validation",
            "properties": [
              {
                "name": "Label",
                "type": "text",
                "description": "Input field label"
              },
              {
                "name": "Value",
                "type": "any",
                "description": "Current input value"
              },
              {
                "name": "Required",
                "type": "boolean",
                "description": "Whether field is required"
              },
              {
                "name": "Type",
                "type": "text",
                "description": "Input type: text, number, email, date, etc."
              },
              {
                "name": "ErrorMessage",
                "type": "text",
                "description": "Error message to display"
              }
            ],
            "behaviors": [
              "OnChange: Update parent value",
              "OnBlur: Validate input",
              "OnFocus: Clear error"
            ],
            "validationRules": [
              "Required validation",
              "Pattern validation",
              "Length validation",
              "Custom validation"
            ]
          },
          {
            "name": "FormSelect",
            "description": "Reusable dropdown selection component",
            "properties": [
              {
                "name": "Label",
                "type": "text"
              },
              {
                "name": "Items",
                "type": "table"
              },
              {
                "name": "Value",
                "type": "any"
              },
              {
                "name": "Required",
                "type": "boolean"
              }
            ]
          },
          {
            "name": "FormValidator",
            "description": "Reusable form validation component",
            "properties": [
              {
                "name": "Fields",
                "type": "table",
                "description": "Fields to validate"
              },
              {
                "name": "Rules",
                "type": "table",
                "description": "Validation rules"
              }
