        "flowNames": "[Department]_[Process]_Flow"
      },
      "codeStyle": {
        "indentation": "4 spaces",
        "lineLength": "80 characters maximum",
        "comments": "Explain why, not what",
        "errorHandling": "Comprehensive error catching"
      },
      "testing": {
        "unitTests": "Required for components",
        "integrationTests": "Required for flows",
        "performanceTests": "Required for galleries and queries",
        "coverage": "80% minimum"
      }
    }
