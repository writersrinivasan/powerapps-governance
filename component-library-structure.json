            "properties": [
              {
                "name": "Data",
                "type": "table"
              },
              {
                "name": "Type",
                "type": "text",
                "description": "Chart type: bar, line, pie, etc."
              }
            ]
          },
          {
            "name": "Card",
            "description": "Reusable card display component",
            "properties": [
              {
                "name": "Title",
                "type": "text"
              },
              {
                "name": "Content",
                "type": "text"
              },
              {
                "name": "Image",
                "type": "text"
              }
            ]
          }
        ]
      },
